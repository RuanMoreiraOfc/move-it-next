{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@@types/*": ["./src/@types/*"],

      "@services/*": ["./src/services/*"],

      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@components/*": ["./src/components/*"],

      "@u-functions/*": ["./src/utils/Functions/*"],
      "@u-hoc/*": ["./src/utils/HighOrderComponents/*"],
      "@u-hoc-styles/*": ["./src/utils/HighOrderComponents/styles/*"],
      "@u-hoc-components/*": ["./src/utils/HighOrderComponents/components/*"],

      "@pages/*": ["./src/pages/*"],
      "@sf-auth/*": ["./src/pages/api/auth/*"],
      "@sf-database/*": ["./src/pages/api/database/*"],
      "@sf-utils/*": ["./src/pages/api/utils/*"],

      "@styles/*": ["./src/styles/*"],
      "@st-pages/*": ["./src/styles/pages/*"],
      "@st-components/*": ["./src/styles/components/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
